@page "/AddAdult/{StreetName}/{HouseNumber:int}"
@using Family_Assignment.Data
@inject IFamilyReader fileReader
@inject NavigationManager NavMgr

<h3>AddAdult</h3>


<EditForm Model="@adultToAdd" OnValidSubmit="@AddNewAdult">
    <DataAnnotationsValidator/> <ValidationSummary/>
    <div class="form-group"> First name:<br/> <InputText @bind-Value="adultToAdd.FirstName"/> </div>
    <div class="form-group"> Last name:<br/> <InputText @bind-Value="adultToAdd.LastName"/> </div>
    <div class="form-group"> Hair color:<br/> <InputText @bind-Value="adultToAdd.HairColor"/> </div>
    <div class="form-group"> Eye color:<br/> <InputText @bind-Value="adultToAdd.EyeColor"/> </div>
    <div class="form-group"> Age:<br/> <InputNumber @bind-Value="adultToAdd.Age"/> </div>
    <div class="form-group"> Weight:<br/> <InputNumber @bind-Value="adultToAdd.Weight"/> </div>
    <div class="form-group"> Height:<br/> <InputNumber @bind-Value="adultToAdd.Height"/> </div>
    <div class="form-group"> Sex:
        <InputSelect @bind-Value="adultToAdd.Sex">
            <option value=""></option>
            <option value="M">Male</option>
            <option value="F">Female</option>
        </InputSelect></div>

    <p class="actions"> <button class="btn btn-outline-dark" type="submit">Create</button> </p>
</EditForm>
