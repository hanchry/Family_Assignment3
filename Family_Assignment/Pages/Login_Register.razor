@page "/login"
@namespace Family_Assignment.Pages
@using Family_Assignment.Authentication

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<AuthorizeView>
    <NotAuthorized>
        <div class="font-sans">
            <div class="relative min-h-screen flex flex-col sm:justify-center items-center bg-gray-500 ">
                <div class="relative sm:max-w-sm w-full">
                    <div class="card bg-blue-400 shadow-lg  w-full h-full rounded-3xl absolute  transform -rotate-6"></div>
                    <div class="card bg-green-400 shadow-lg  w-full h-full rounded-3xl absolute  transform rotate-6"></div>
                    <div class="relative w-full rounded-3xl  px-6 py-4 bg-gray-200 shadow-md">
                        <label for="" class="block mt-3 mb-10 text-sm text-gray-700 text-center font-semibold text-xl">
                            Login/Register
                        </label>
                        <div class="text-red-500 text-center">@errorMessage</div>

                            <div>
                                <input type="name" placeholder=" UserName" @bind-value="username" class="text-center mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0">
                            </div>

                            <div class="mt-7">
                                <input type="password" placeholder=" Password" @bind-value="password" class="text-center mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0">
                            </div>

                            <div class="mt-7">
                                <button @onclick="PerformLogin" class="bg-blue-500 w-full py-3 rounded-xl text-white shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-105">
                                    Login
                                </button>
                            </div>

                            <div class="flex mt-3 items-center text-center">
                                <hr class="border-gray-300 border-1 w-full rounded-md">
                                <label class="block font-medium text-sm text-gray-600 w-full">
                                    Or
                                </label>
                                <hr class="border-gray-300 border-1 w-full rounded-md">
                            </div>
                            <div class="mt-3">
                                <button @onclick="PerformRegister" class="bg-green-500 w-full py-3 rounded-xl text-white shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-105">
                                    Register
                                </button>
                            </div>


                        
                    </div>
                </div>
            </div>

        </div>
    </NotAuthorized>
</AuthorizeView>