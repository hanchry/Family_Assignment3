@page "/AddInterest/{StreetName}/{HouseNumber:int}/{IdOfChild:int}"
@using Family_Assignment.Data
@inject IFamilyReader fileReader
@inject IInterestController interestController
@inject NavigationManager NavMgr

@if (interestToAdd == null)
{
    <p>no families found</p>
}
else
{
    <EditForm Model="@interestToAdd">
        <div class="bg-green-100 py-32 min-h-screen px-0">
            <!--   tip; mx-auto -- jagab ilusti keskele  -->
            <div class="bg-white p-10 md:w-3/4 lg:w-1/2 mx-auto shadow-xl">

                <div class="flex items-center justify-center">

                    <h3 class="inline-block w-40 text-right 
                                                                         font-bold text-green-700">AddInterest</h3>
                </div>

                <div class="flex items-center mb-5">
                    <!--         tip - here neede inline-block , but why? -->
                    <label for="name" class="inline-block w-20 mr-6 text-right 
                                           font-bold text-gray-600">Type</label>
                    <br/> <InputText class="flex-1 py-2 border-b-2 border-gray-400 focus:border-green-400 
                                                                                 text-gray-600 placeholder-gray-400
                                                                                 outline-none" @bind-Value="interestToAdd.Type"/>
                </div>
                <div class="flex items-center mb-5">
                    <!--         tip - here neede inline-block , but why? -->
                    <label for="name" class="inline-block w-20 mr-6 text-right
                                            font-bold text-gray-600">Description</label>
                    <br/> <InputText class="flex-1 py-2 border-b-2 border-gray-400 focus:border-green-400
                                                                                  text-gray-600 placeholder-gray-400
                                                                                  outline-none" @bind-Value="interestToAdd.Description"/>
                </div>


                <div class="text-right text-red-700">
                    <DataAnnotationsValidator/> <ValidationSummary/>
                    <button class="py-3 px-8 bg-green-400 text-white font-bold" @onclick="@AddNewInterest">Submit</button>
                </div>
                
            </div>
        </div>
    </EditForm>
}
