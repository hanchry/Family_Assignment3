@page "/FamilyView/{StreetName}/{HouseNumber:int}"
@using Family_Assignment.Data
@inject IFamilyReader fileReader
@inject NavigationManager NavMgr
<h3>FamilyView</h3>

<div class="card-body pt-0">
    <table class="table table-bordered">
        <tr>
            <th width="30%">StreetName</th>
            <td width="2%">:</td>
            <td>@StreetName</td>
        </tr>
        <tr>
            <th width="30%">HouseName</th>
            <td width="2%">:</td>
            <td>@HouseNumber</td>
        </tr>

    </table>
</div>

<h4>Adults</h4>
<p>
    Filter by:
    <select class="form-control selectpicker" @onchange="@((arg) => FilterByType(arg))" style="width: 100px">
        <option>Id</option>
        <option>Firstname</option>
        <option>Lastname</option>
        <option>Age</option>
    </select>
</p>
<p> <input type="number" @oninput="@((arg) => FilterArg(arg))" style="width: 50px"/></p>


<AuthorizeView >
    <Authorized >
        <a class="btn btn-success mb-2" @onclick="() => NavigateToAddAdult()">Add Adult</a>
    </Authorized>
</AuthorizeView>

@if (toShowAdults == null)
{
    <p>no adults fount</p>
}
else
{
    <table class="table">
        <AuthorizeView >
            <Authorized >
                <thead class="table-primary">
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Age</th>
                    <th>Sex</th>
                    <th>View</th>
                    <th>Action</th>
                </tr>
                </thead>
            </Authorized>
            <NotAuthorized>
                <thead class="table-primary">
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Age</th>
                    <th>Sex</th>
                </tr>
                </thead>
            </NotAuthorized>
        </AuthorizeView>
        <tbody>
        @foreach (var item in toShowAdults)
        {
            <AuthorizeView >
                <Authorized >
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Age</td>
                        <td>@item.Sex</td>
                        <td>
                            <a class="btn btn-primary" @onclick="() => NavigateToAdultView(item.Id)">View</a>
                        </td>
                        <td>
                            <a class="btn btn-warning" @onclick="() => NavigateToEditAdult(item.Id)">Edit</a>
                            <a class="btn btn-danger" @onclick="() => DeleteAdult(item.Id)">Delete</a>
                        </td>
                    </tr>
                </Authorized>
                <NotAuthorized>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Age</td>
                        <td>@item.Sex</td>
                    </tr>
                </NotAuthorized>
            </AuthorizeView>
        }
        </tbody>
    </table>
}

